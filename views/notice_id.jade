doctype html
html
    head
        meta(charset='utf-8')
        link(rel="stylesheet", href="/notice_id.css", type="text/css")
        script.
            function ConfirmDelete() {
                return confirm("삭제하시겠습니까?");
            };

    body
        a(href='/Notice' class='title') Test Notice
        hr
        p= data.content

        form(action="edit/"+ data.id method='get')
            input(type="submit" value="edit")
        form(action="delete/"+ data.id method='post')
            input(type="submit" value="delete" Onclick="return ConfirmDelete()")